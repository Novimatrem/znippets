REM -------------------------------------------------------

REM -------------------------------------------------------
echo Jasmine folder
start "" "explorer" C:\Jasmine
REM -------------------------------------------------------

REM -------------------------------------------------------
echo Steam
start "" "C:\Program Files (x86)\Steam\Steam.exe"
REM -------------------------------------------------------

REM -------------------------------------------------------
echo Firefox
start "" "C:\Program Files\Mozilla Firefox\firefox.exe"
REM -------------------------------------------------------

echo Done.
